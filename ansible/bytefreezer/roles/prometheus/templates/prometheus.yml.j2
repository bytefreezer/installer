# Prometheus Configuration
# Managed by Ansible

global:
  scrape_interval: 15s
  evaluation_interval: 15s

scrape_configs:
  - job_name: 'bytefreezer-receiver'
    static_configs:
      - targets: ['localhost:{{ receiver_metrics_port }}']
    metrics_path: /metrics

  - job_name: 'bytefreezer-piper'
    static_configs:
      - targets: ['localhost:{{ piper_metrics_port }}']
    metrics_path: /metrics

  - job_name: 'bytefreezer-packer'
    static_configs:
      - targets: ['localhost:{{ packer_metrics_port }}']
    metrics_path: /metrics

  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
