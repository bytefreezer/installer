---
# ByteFreezer Inventory Example
# Copy to inventory.yml and customize

all:
  children:
    bytefreezer:
      hosts:
        processing-server:
          ansible_host: 192.168.1.100
          ansible_user: ubuntu
          ansible_ssh_private_key_file: ~/.ssh/id_rsa

    # For multiple servers (high availability)
    # processing:
    #   hosts:
    #     server1:
    #       ansible_host: 192.168.1.101
    #     server2:
    #       ansible_host: 192.168.1.102
    #     server3:
    #       ansible_host: 192.168.1.103

  vars:
    # Docker settings
    docker_users:
      - ubuntu

    # Image settings
    image_registry: ghcr.io/bytefreezer
    image_tag: latest
