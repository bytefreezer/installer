---
# ByteFreezer Proxy Inventory Example
# Copy to inventory.yml and customize

all:
  children:
    proxy:
      hosts:
        edge-server-1:
          ansible_host: 192.168.1.200
          ansible_user: ubuntu
          ansible_ssh_private_key_file: ~/.ssh/id_rsa

        # Add more edge servers
        # edge-server-2:
        #   ansible_host: 192.168.2.200

  vars:
    docker_users:
      - ubuntu

    image_registry: ghcr.io/bytefreezer
    image_tag: latest
